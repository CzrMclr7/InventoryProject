@using InventoryProject.DataAccess.Models 
@model ProductModel 
@{ 
    ViewData["Title"] = "Product Management"; 
} 
@* @await RenderSectionAsync("Styles", required: false) *@
<h2>Product List</h2> 

 <div class="row"> 
    <div class="col-md-8"> 
        <div class="card"> 
            <div class="card-body"> 
                <div class="mb-2"> 
                    <button class="btn btn-success btn-sm" id="btnEdit">Edit</button> 
                    <button class="btn btn-danger btn-sm" id="btnDelete">Delete</button> 
                    <button class="btn btn-light btn-sm" id="btnRefresh">Refresh</button>
                    <a asp-controller="Report"  asp-action="ProductReport" target="_blank" class="btn btn-light btn-sm">
                        Export Product List PDF
                    </a>
                </div> 
                <table id="tbl-products" class="table table-bordered table-sm"> 
                    <thead class="table-light"> 
                        <tr> 
                            <th>Name</th> 
                            <th>Qty</th> 
                            <th>Price</th> 
                        </tr> 
                    </thead> 
                </table> 
            </div> 
        </div> 
    </div> 
    <div class="col-md-4"> 
        <div class="card"> 
            <form asp-action="Save" method="post" id="frm-product" asp-antiforgery="true" enctype="multipart/form-data">
                <div class="card-header"> 
                    <h4 class="card-title" id="frm-product-title">Product Form</h4> 
                </div> 
                <div class="card-body"> 
                    <input type="hidden" asp-for="Id" /> 
                    <div class="mb-2"> 
                        <label asp-for="Name" class="form-label"></label> 
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span> 
                    </div> 

                    <div class="mb-2">
                        <label asp-for="Qty" class="form-label"></label> 
                        <input asp-for="Qty" class="form-control" required />
                        <span asp-validation-for="Qty" class="text-danger"></span> 
                    </div> 
                    <div class="mb-2"> 
                        <label asp-for="Price" class="form-label"></label> 
                        <input asp-for="Price" class="form-control" /> 
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-danger" id="btnReset"> Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div> 


